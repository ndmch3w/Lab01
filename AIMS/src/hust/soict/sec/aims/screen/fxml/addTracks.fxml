<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Add Track" style="-fx-font-size: 20px;" />

            <Label text="Title" />
            <TextField fx:id="tfTitle" />

            <Label text="Length" />
            <TextField fx:id="tfLength" />

            <Button fx:id="btnSaveTrack" text="Save Track" onAction="#btnSaveTrackPressed" />
        </VBox>
    </children>
</AnchorPane>
