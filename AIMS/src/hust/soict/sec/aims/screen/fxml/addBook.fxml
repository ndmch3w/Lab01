<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" >
    <children>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Add Book" style="-fx-font-size: 20px;" />

            <Label text="Title" />
            <TextField fx:id="tfTitle" />

            <Label text="Category" />
            <TextField fx:id="tfCategory" />

            <Label text="Cost" />
            <TextField fx:id="tfCost" />

            <Button fx:id="btnSave" text="Save" onAction="#btnSavePressed" />
        </VBox>
    </children>
</AnchorPane>
